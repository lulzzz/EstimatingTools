<Window x:Class="TemplateBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        mc:Ignorable="d ignore"
        xmlns:dd="urn:gong-wpf-dragdrop" 
        xmlns:i ="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:cmd ="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
        
        xmlns:views="clr-namespace:TECUserControlLibrary.Views;assembly=TECUserControlLibrary"
        xmlns:controls="clr-namespace:TECUserControlLibrary.UserControls;assembly=TECUserControlLibrary"
        xmlns:utilities="clr-namespace:TECUserControlLibrary.Utilities;assembly=TECUserControlLibrary"
        xmlns:vm="clr-namespace:TECUserControlLibrary.ViewModels;assembly=TECUserControlLibrary"
        xmlns:localMVVM="clr-namespace:TemplateBuilder.MVVM"

        Title="{Binding TitleString}"
        DataContext="{Binding MainViewModel, Source={StaticResource Locator}}"
        Height="720"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        MinHeight="300" MinWidth="535"
        x:Name="parent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TECUserControlLibrary;component/TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <cmd:EventToCommand Command="{Binding ClosingCommand}" PassEventArgsToCommand="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.InputBindings>
        <KeyBinding Command="{Binding SaveCommand}"
                    Gesture="CTRL+S" />
        <KeyBinding Command="{Binding SaveAsCommand}"
                    Gesture="SHIFT+CTRL+S" />
        <KeyBinding Command="{Binding UndoCommand}"
                    Gesture="CTRL+Z" />
        <KeyBinding Command="{Binding RedoCommand}"
                    Gesture="CTRL+SHIFT+Z" />
    </Window.InputBindings>
    <ContentControl Content="{Binding ElementName=parent, Path=DataContext.CurrentVM}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type localMVVM:MainViewModel}">
                <DockPanel Background="{DynamicResource TBWindowBackgroundBrush}">
                    <views:MenuView ViewModel="{Binding ElementName=parent, Path=DataContext.MenuVM}"
                                              DockPanel.Dock="Top"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" MaxWidth="{Binding TemplatesVisibility, Converter={utilities:TemplatesVisibilityConverter}}"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*" MinHeight="40"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <Image Source="{Binding TECLogo}"
                               Grid.Column="4"/>

                        <views:ScopeCollectionsTabView Grid.RowSpan="2"
                                                         ViewModel="{Binding ScopeCollection}"/>
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1"/>
                        <TabControl Grid.Row="0"
                                    Grid.Column="2"
                                    Grid.RowSpan="2"
                                    SelectedIndex="{Binding DGTabIndex, Converter={utilities:TemplateGridIndexToIntegerConverter}}"
                                    Background="{DynamicResource SectionBackgroundBrush}"
                                    Margin="0,6,0,0">
                            <TabItem Header="None" Visibility="Collapsed">
                            </TabItem>
                            <TabItem Header="Systems">
                                <controls:SystemListControl Source="{Binding ElementName=parent, Path=DataContext.Templates.SystemTemplates}"
                                                            Selected="{Binding Selected}"/>
                                <!--<views:TypicalSystemsView ViewModel="{Binding ElementName=parent, Path=DataContext.TypicalSystemsTab}"/>-->
                            </TabItem>
                            <TabItem Header="Equipment">
                                <views:EquipmentGridView EquipmentSource="{Binding Templates.EquipmentTemplates}"
                                                           ViewModel="{Binding ElementName=parent, Path=DataContext.ScopeDataGrid}"/>
                            </TabItem>
                            <TabItem Header="Points">
                                <views:SubScopeGridView SubScopeSource="{Binding Templates.SubScopeTemplates}"
                                                          ViewModel="{Binding ElementName=parent, Path=DataContext.ScopeDataGrid.ChildVM}"/>
                            </TabItem>
                            <TabItem Header="Devices">
                                <controls:DevicesGridControl DevicesSource="{Binding Templates.Catalogs.Devices}"
                                                         ViewModel="{Binding ScopeDataGrid.ChildVM.ChildVM}"
                                                             SelectedDevice="{Binding ScopeDataGrid.ChildVM.ChildVM.SelectedDevice}"/>
                            </TabItem>
                            <TabItem Header="Controllers and Panels">
                                <views:ControllersPanelsView ViewModel="{Binding ControllersPanelsVM}"/>
                            </TabItem>
                            <TabItem Header="Materials">
                                <views:MaterialView ViewModel="{Binding MaterialsTab}"/>
                            </TabItem>
                            <TabItem Header="Constants">
                                <Label Content="CONSTANTS VIEW DEPRECATED"/>
                            </TabItem>
                            <TabItem Header="Settings">
                                <views:SettingsView ViewModel="{Binding SettingsVM}"/>
                            </TabItem>
                
                        </TabControl>
                        <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Grid.Row="1"/>
                        <!--Right Tab Control-->
                        <!--<views:EditTabView Index="{Binding EditTab.TabIndex}"
                                         ViewModel="{Binding ElementName=parent, Path=DataContext.EditTab}"
                                         Grid.Column="4" Grid.Row="1" Grid.RowSpan="1" Margin="0,-2,0,0"/>-->
                        <views:PropertiesView Selected="{Binding EditTab.Selected}"
                                              Grid.Column="4" Grid.Row="1" Grid.RowSpan="1" Margin="0,-2,0,0"/>

                        <views:StatusBarView ViewModel="{Binding ElementName=parent, Path=DataContext.StatusBarVM}"
                            Grid.Row="3"
                                   Grid.ColumnSpan="6"/>
                    </Grid>
                </DockPanel>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SplashVM}">
                <views:SplashView ViewModel="{Binding}"/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>

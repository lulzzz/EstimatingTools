<UserControl x:Class="EstimateBuilder.View.ReviewTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:review="clr-namespace:EstimateBuilder.View.Review"
             xmlns:local="clr-namespace:EstimateBuilder.View"
             mc:Ignorable="d"
             x:Name="parent"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid DataContext="{Binding ElementName=parent, Path=ViewModel}"
          Background="{DynamicResource SectionBackgroundBrush}">
        <TabControl>
            <TabItem Header="Device List">
                <review:DeviceListView ViewModel="{Binding DeviceVM}"/>
            </TabItem>
            <TabItem Header="Electrical Materials">
                <review:ElectricalMaterialView ViewModel="{Binding ElectricalMaterialVM}"/>
            </TabItem>
            <TabItem Header="Summary">
                <review:ReviewView ViewModel="{Binding ReviewVM}"/>
            </TabItem>
        </TabControl>
            
    </Grid>
</UserControl>

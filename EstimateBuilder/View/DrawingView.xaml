<UserControl x:Class="EstimateBuilder.View.DrawingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:vm="clr-namespace:EstimateBuilder.ViewModel"
             xmlns:eLib ="clr-namespace:EstimatingLibrary;assembly=EstimatingLibrary"
        xmlns:dd ="urn:gong-wpf-dragdrop"
        mc:Ignorable="d ignore"
        DataContext="{Binding Drawing, Source={StaticResource Locator}}" d:DesignWidth="960" d:DesignHeight="660">

    <UserControl.Resources>
        <DataTemplate 
            DataType="{x:Type eLib:TECVisualScope}">
            <Grid>
                <Thumb
                    Width="40"
                    Height="20"
                    DragDelta="Thumb_DragDelta">
                    <Thumb.Template>
                        <ControlTemplate>
                            <Border BorderThickness="2" BorderBrush="Black">
                                <Grid Background="{DynamicResource ItemBrush}" Cursor="Hand">
                                    <TextBlock Text="{Binding Scope.Name}" HorizontalAlignment="Center"/>
                                    <Grid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Test"/>
                                        </ContextMenu>
                                    </Grid.ContextMenu>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                </Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Drawings:"
                   Margin="5"/>
            <ComboBox Grid.Column="1"
                      Margin="5"
                      ItemsSource="{Binding Bid.Drawings}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding CurrentDrawing}"/>
        </Grid>

        <DataGrid Grid.Column="0" 
                  Grid.Row="1"
                  ItemsSource="{Binding DisplaySystems}"
                  dd:DragDrop.IsDragSource="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="System Name"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Label Content="Name: " Grid.Column="0"
                   Margin="5"/>
            <TextBox Text="{Binding CurrentDrawing.Name}"
                     Grid.Column="1"
                     Margin="5"/>
            <Label Content="Description: " Grid.Column="2"
                   Margin="5"/>
            <TextBox Text="{Binding CurrentDrawing.Description}"
                     Grid.Column="3"
                     Margin="5"/>
            <TextBox Text="{Binding CurrentIndex}"
                     Grid.Column="4"
                     Margin="5"/>
            <Label Content="of"
                   Grid.Column="5"
                   Margin="5"/>
            <Label Content="{Binding CurrentDrawing.Pages.Count}"
                   Grid.Column="6"
                   Margin="5"/>
            <Button Content="&lt;-" Command="{Binding PreviousPageCommand}"
                    Grid.Column="7" Margin="5"/>
            <Button Content="-&gt;" Command="{Binding NextPageCommand}"
                    Grid.Column="8" Margin="5"/>
        </Grid>
        <ScrollViewer Grid.Column="1"
                      Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Image x:Name="imageControl"
            Source="{Binding CurrentPage.Path}"
                       Stretch="None"
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Grid.Column="1"/>
                <ItemsControl x:Name="scopeOverlayItemsControl"
                      Background="Transparent"
                      Grid.Column="1"
                      ItemsSource="{Binding CurrentPage.PageScope}"
                      Width="{Binding ElementName=imageControl, Path=Width}"
                      Height="{Binding ElementName=imageControl, Path=Height}"
                      dd:DragDrop.IsDropTarget="True"
                      dd:DragDrop.DropHandler="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left" Value="{Binding X}" />
                            <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

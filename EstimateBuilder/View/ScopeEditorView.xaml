<UserControl x:Class="EstimateBuilder.View.ScopeEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:cnvt="clr-namespace:EstimateBuilder.HelperConverters"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:cLib="clr-namespace:TECUserControlLibrary;assembly=TECUserControlLibrary"
        xmlns:helpers="clr-namespace:EstimateBuilder.Helpers"
        xmlns:eLib="clr-namespace:EstimatingLibrary;assembly=EstimatingLibrary"
        mc:Ignorable="d ignore"
             
             x:Name="scopeEditorControl"
        DataContext="{Binding ScopeEditor, Source={StaticResource Locator}}"
        d:DesignWidth="960" d:DesignHeight="660">

    <Grid  Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*" MinHeight="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding ViewData.SearchString}"/>
            <Button Grid.Column="1"
                    Content="Search"
                    Command="{Binding SearchCollectionCommand}"/>
            <Button Grid.Column="2"
                    Content="Done"
                    Command="{Binding EndSearchCommand}"/>
        </Grid>

        <TabControl Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    SelectedIndex="{Binding DGTabIndex}">

            <TabItem Header="Systems">
                <cLib:SystemsGridControl SystemsSource="{Binding Bid.Systems}"
                                         ViewModel="{Binding ElementName=scopeEditorControl, Path=DataContext}"/>

            </TabItem>

            <TabItem Header="Scope">
                <DataGrid  ItemsSource="{Binding Bid.ScopeTree}" 
                           AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="..." CellTemplate="{StaticResource ExpandDetails}" Width="30" />
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="*"/>
                        <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                        <DataGridTextColumn Binding="{Binding Branches.Count}" Header="# Branches" Width="*" IsReadOnly="True"
                                            ElementStyle="{StaticResource RightCell}"/>
                    </DataGrid.Columns>
                    <DataGrid.RowDetailsTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding SelectedItem.Branches}">
                            <DataGrid RowDetailsTemplate="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                            AncestorType={x:Type DataGrid}},
                            Path=RowDetailsTemplate}"
                                  ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                            AncestorType={x:Type DataGrid}},
                            Path=SelectedItem.Branches}"
                                      AutoGenerateColumns="False"
                           VirtualizingPanel.ScrollUnit="Pixel">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="" CellTemplate="{DynamicResource ExpandDetails}" Width="30" />
                                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="Auto"/>
                                    <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="Auto"/>
                                    <DataGridTextColumn Binding="{Binding Branches.Count}" Header="# Branches" Width="Auto" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </HierarchicalDataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </TabItem>
            
            <TabItem Header="Notes">
                <DataGrid x:Name="notesDataGrid"  
                  ItemsSource="{Binding Bid.Notes}"
                  AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Text}" Header="Note" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Exclusions">
                <DataGrid x:Name="exclusionsDataGrid"  
                  ItemsSource="{Binding Bid.Exclusions}"
                          CanUserAddRows="True"
                  AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Text}" Header="Note" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <TabControl Grid.Column="0" Grid.Row="2" 
                Grid.RowSpan="1" Margin="5,0,5,0" Background="{DynamicResource SectionBackgroundBrush}"
                SelectedIndex="{Binding LeftTabIndex}">
            <TabItem Header="Sys"
                Visibility="{Binding LeftSystemsVisibility}">
                <cLib:ScopeItemsControl ScopeSource="{Binding ViewData.SystemItemsCollection}"/>
            </TabItem>
            <TabItem Header="Equip"
                 Visibility="{Binding LeftEquipmentVisibility}">
                <cLib:ScopeItemsControl ScopeSource="{Binding ViewData.EquipmentItemsCollection}"/>
            </TabItem>
            <TabItem Header="Points"
                 Visibility="{Binding LeftSubScopeVisibility}">
                <cLib:ScopeItemsControl ScopeSource="{Binding ViewData.SubScopeItemsCollection}"/>
            </TabItem>
            <TabItem Header="Dev"
                     Visibility="{Binding LeftDevicesVisibility}">
                <cLib:ScopeItemsControl ScopeSource="{Binding ViewData.DevicesItemsCollection}"/>
            </TabItem>
            <TabItem Header="Tags">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Name:"/>
                    <TextBox Text="{Binding TagName}"
                             Grid.Column="1"
                             VerticalAlignment="Top"
                             Margin="5"/>
                    <Button Content="Add"
                            Grid.ColumnSpan="2" 
                            Grid.Row="1"
                            Command="{Binding AddTagCommand}"
                                Margin="5"/>
                    <cLib:TagsGridControl TagsSource="{Binding Templates.Tags}"
                                           Grid.Row="2" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
        </TabControl>
        <!--Right Tab Control-->
        <cLib:EditTabControl Index="{Binding RightTabIndex}"
                             ViewModel="{Binding ElementName=scopeEditorControl, Path=DataContext}"
                             Grid.Column="4" Grid.Row="0" Grid.RowSpan="2"/>
    </Grid>
</UserControl>

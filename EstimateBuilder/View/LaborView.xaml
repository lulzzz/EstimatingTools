<UserControl x:Class="EstimateBuilder.View.LaborView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        mc:Ignorable="d ignore"
             x:Name="parent"
             d:DesignWidth="960" d:DesignHeight="660">

    <Grid DataContext="{Binding ElementName=parent, Path=ViewModel}"
          Background="{DynamicResource SectionBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--TEC Labor Headers-->
        <Label Content="TEC Labor"
               FontWeight="Bold"/>
        <Label Content="Points"
               Grid.Column="1"/>
        <Label Content="Hours/Point"
               Grid.Column="2"/>
        <Label Content="Hours (Points)"
               Grid.Column="3"/>
        <Label Content="Extra Hours"
               Grid.Column="4"/>
        <Label Content="Total Hours"
               Grid.Column="5"/>
        <Label Content="$/Hour"
               Grid.Column="6"/>
        <Label Content="SubTotal"
               Grid.Column="7"/>


        <!--Project Management Values-->
        <Label Content="Project Management: "
               Grid.Row="1"/>
        <Label Content="{Binding Labor.NumPoints}"
                 Grid.Row="1" Grid.Column="1"
                 />
        <Label Content="{Binding Labor.PMCoef}"
                 Grid.Row="1" Grid.Column="2"
                 />
        <Label Content="{Binding Labor.PMPointHours, Mode=OneWay}"
                 Grid.Row="1" Grid.Column="3"
                 />
        <TextBox Text="{Binding Labor.PMExtraHours}"
                 Grid.Row="1" Grid.Column="4"
                 Margin="2"/>
        <Label Content="{Binding Labor.PMTotalHours, Mode=OneWay}"
                 Grid.Row="1" Grid.Column="5"
                 />
        <Label Content="{Binding Labor.PMRate}"
                 Grid.Row="1" Grid.Column="6"
                 />
        <Label Content="{Binding Labor.PMSubTotal, Mode=OneWay}"
                 Grid.Row="1" Grid.Column="7"
                 />

        <!--Engineering Values-->
        <Label Content="Engineering: "
               Grid.Row="2"/>
        <Label Content="{Binding Labor.NumPoints}"
                 Grid.Row="2" Grid.Column="1"
                 />
        <Label Content="{Binding Labor.ENGCoef}"
                 Grid.Row="2" Grid.Column="2"
                 />
        <Label Content="{Binding Labor.ENGPointHours, Mode=OneWay}"
                 Grid.Row="2" Grid.Column="3"
                 />
        <TextBox Text="{Binding Labor.ENGExtraHours}"
                 Grid.Row="2" Grid.Column="4"
                 Margin="2"/>
        <Label Content="{Binding Labor.ENGTotalHours, Mode=OneWay}"
                 Grid.Row="2" Grid.Column="5"
                 />
        <Label Content="{Binding Labor.ENGRate}"
                 Grid.Row="2" Grid.Column="6"
                 />
        <Label Content="{Binding Labor.ENGSubTotal, Mode=OneWay}"
                 Grid.Row="2" Grid.Column="7"
                 />

        <!--Software Values-->
        <Label Content="Software: "
               Grid.Row="3"/>
        <Label Content="{Binding Labor.NumPoints}"
                 Grid.Row="3" Grid.Column="1"
                 />
        <Label Content="{Binding Labor.SoftCoef}"
                 Grid.Row="3" Grid.Column="2"
                 />
        <Label Content="{Binding Labor.SoftPointHours, Mode=OneWay}"
                 Grid.Row="3" Grid.Column="3"
                 />
        <TextBox Text="{Binding Labor.SoftExtraHours}"
                 Grid.Row="3" Grid.Column="4"
                 Margin="2"/>
        <Label Content="{Binding Labor.SoftTotalHours, Mode=OneWay}"
                 Grid.Row="3" Grid.Column="5"
                 />
        <Label Content="{Binding Labor.SoftRate}"
                 Grid.Row="3" Grid.Column="6"
                 />
        <Label Content="{Binding Labor.SoftSubTotal, Mode=OneWay}"
                 Grid.Row="3" Grid.Column="7"
                 />

        <!--Graphics Values-->
        <Label Content="Graphics: "
               Grid.Row="4"/>
        <Label Content="{Binding Labor.NumPoints}"
                 Grid.Row="4" Grid.Column="1"
                 />
        <Label Content="{Binding Labor.GraphCoef}"
                 Grid.Row="4" Grid.Column="2"
                 />
        <Label Content="{Binding Labor.GraphPointHours, Mode=OneWay}"
                 Grid.Row="4" Grid.Column="3"
                 />
        <TextBox Text="{Binding Labor.GraphExtraHours}"
                 Grid.Row="4" Grid.Column="4"
                 Margin="2"/>
        <Label Content="{Binding Labor.GraphTotalHours, Mode=OneWay}"
                 Grid.Row="4" Grid.Column="5"
                 />
        <Label Content="{Binding Labor.GraphRate}"
                 Grid.Row="4" Grid.Column="6"
                 />
        <Label Content="{Binding Labor.GraphSubTotal, Mode=OneWay}"
                 Grid.Row="4" Grid.Column="7"
                 />
        
        <!--Commisioning Values-->
        <Label Content="Commisioning: "
               Grid.Row="5"/>
        <Label Content="{Binding Labor.NumPoints}"
                 Grid.Row="5" Grid.Column="1"
                 />
        <Label Content="{Binding Labor.CommCoef}"
                 Grid.Row="5" Grid.Column="2"
                 />
        <Label Content="{Binding Labor.CommPointHours, Mode=OneWay}"
                 Grid.Row="5" Grid.Column="3"
                 />
        <TextBox Text="{Binding Labor.CommExtraHours}"
                 Grid.Row="5" Grid.Column="4"
                 Margin="2"/>
        <Label Content="{Binding Labor.CommTotalHours, Mode=OneWay}"
                 Grid.Row="5" Grid.Column="5"
                 />
        <Label Content="{Binding Labor.CommRate}"
                 Grid.Row="5" Grid.Column="6"
                 />
        <Label Content="{Binding Labor.CommSubTotal, Mode=OneWay}"
                 Grid.Row="5" Grid.Column="7"
                 />

        
        <!--Subcontractor Labor Headers-->
        <Label Content="Subcontractor Labor"
               FontWeight="Bold"
               Grid.Row="7"/>
        <Label Content="Hours"
               Grid.Row="7" Grid.Column="5"/>
        <Label Content="$/Hour"
               Grid.Row="7" Grid.Column="6"/>
        <Label Content="SubTotal"
               Grid.Row="7" Grid.Column="7"/>
        

        <!--Electrical Values-->
        <Label Content="Electrical: "
               Grid.Row="8"/>
        <Label Content="{Binding Labor.ElectricalHours}"
                 Grid.Row="8" Grid.Column="5"
                 />
        <Label Content="{Binding Labor.ElectricalRate}"
                 Grid.Row="8" Grid.Column="6"
                 />
        <Label Content="{Binding Labor.ElectricalSubTotal, Mode=OneWay}"
                 Grid.Row="8" Grid.Column="7"
                 />
        
        
        <!--Total Values-->
        <Label Content="Total"
               Grid.Row="9" Grid.Column="7"/>
        <Label Content="{Binding Labor.TotalCost, Mode=OneWay}"
                 Grid.Row="10" Grid.Column="7"
                 />
        
        <!--Reload Button-->
        <Button Grid.Row="9" Grid.Column="0"
                Grid.RowSpan="2"
                Margin="5">
            <TextBlock TextWrapping="Wrap"
                       TextAlignment="Center">Reload Coefficients<LineBreak/>and Rates</TextBlock>
        </Button>

    </Grid>
</UserControl>

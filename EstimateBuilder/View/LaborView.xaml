<UserControl x:Class="EstimateBuilder.View.LaborView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        mc:Ignorable="d ignore"
        DataContext="{Binding Labor, Source={StaticResource Locator}}" 
             d:DesignWidth="960" d:DesignHeight="660">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Content="TEC Labor"/>
        <Label Content="Project Management Coefficient: "
               Grid.Row="1"/>
        <TextBox Text="{Binding Labor.PMCoef}"
                 Grid.Row="1" Grid.Column="1"/>
        
        <Label Content="Engineering Coefficient: "
               Grid.Row="2"/>
        <TextBox Text="{Binding Labor.ENGCoef}"
                 Grid.Row="2" Grid.Column="1"/>

        <Label Content="Software Coefficient: "
               Grid.Row="3"/>
        <TextBox Text="{Binding Labor.SoftCoef}"
                 Grid.Row="3" Grid.Column="1"/>
        
        <Label Content="Graphics Coefficient: "
               Grid.Row="4"/>
        <TextBox Text="{Binding Labor.GraphCoef}"
                 Grid.Row="4" Grid.Column="1"/>
        
        <Label Content="Commisioning Coefficient: "
               Grid.Row="5"/>
        <TextBox Text="{Binding Labor.CommCoef}"
                 Grid.Row="5" Grid.Column="1"/>
        
        <Label Content="Subcontractor Labor"
               Grid.Row="7"/>
        
        <Label Content="Electrical Subcontractor Rate: "
               Grid.Row="8"/>
        <TextBox Text="{Binding Labor.ElectricalRate}"
                 Grid.Row="8" Grid.Column="1"/>
    </Grid>
</UserControl>

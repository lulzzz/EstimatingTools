<UserControl x:Class="TECUserControlLibrary.Views.ControlledScopeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.Views"
             xmlns:cLib="clr-namespace:TECUserControlLibrary"
             mc:Ignorable="d" 
             x:Name="parent"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid DataContext="{Binding ElementName=parent, Path=ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <cLib:ControlledScopeDataGrid ControlledScopeSource="{Binding Templates.ControlledScopeTemplates}"
                                      Grid.Row="1" Grid.RowSpan="2"
                                      x:Name="CSGrid"/>
        <cLib:SystemsGridControl SystemsSource="{Binding ElementName=CSGrid, Path=SelectedControlledScope.Systems}"
                                 ViewModel="{Binding ElementName=parent, Path=ViewModel.ScopeDataGrid}"
                                 Grid.Row="1" Grid.Column="1"/>
        <cLib:ControllerGridControl ControllersSource="{Binding ElementName=CSGrid, Path=SelectedControlledScope.Controllers}"
                                    ViewModel="{Binding ElementName=parent, Path=ViewModel}"
                                    Grid.Row="1" Grid.Column="2"/>
        <cLib:ConnectionGrid ViewModel="{Binding ElementName=parent, Path=ViewModel}"
                             Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>

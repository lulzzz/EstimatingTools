<UserControl x:Class="TECUserControlLibrary.Views.SystemHierarchyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.Views"
             xmlns:utilities="clr-namespace:TECUserControlLibrary.Utilities"
             xmlns:controls="clr-namespace:TECUserControlLibrary.UserControls"
             mc:Ignorable="d" 
             x:Name="parent"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <Storyboard x:Key="systemMove">
                <DoubleAnimation Storyboard.TargetName="parent"
                                     Storyboard.TargetProperty="(local:SystemHierarchyView.SystemWidth)" 
                                     To="0" From="{Binding SystemWidth}" BeginTime="0:0:0" Duration="0:0:0.2"/>
            </Storyboard>
            <Storyboard x:Key="systemMoveBack">
                <DoubleAnimation Storyboard.TargetName="parent"
                                     Storyboard.TargetProperty="(local:SystemHierarchyView.SystemWidth)" 
                                     To="{Binding HalfWidth}" From="0" BeginTime="0:0:0" Duration="0:0:0.2"/>
            </Storyboard>
            <Storyboard x:Key="equipmentMove">
                <DoubleAnimation Storyboard.TargetName="parent"
                                     Storyboard.TargetProperty="(local:SystemHierarchyView.EquipmentWidth)" 
                                     To="0" From="{Binding SystemWidth}" BeginTime="0:0:0" Duration="0:0:0.2"/>
            </Storyboard>
            <Storyboard x:Key="equipmentMoveBack">
                <DoubleAnimation Storyboard.TargetName="parent"
                                     Storyboard.TargetProperty="(local:SystemHierarchyView.EquipmentWidth)" 
                                     To="{Binding HalfWidth}" From="0" BeginTime="0:0:0" Duration="0:0:0.2"/>
            </Storyboard>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding ElementName=parent}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding SystemWidth}"/>
            <ColumnDefinition Width="{Binding EquipmentWidth}"/>
            <ColumnDefinition Width="{Binding HalfWidth}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="controls:EquipmentListControl.Selected">
                <EventTrigger.Actions>
                    <BeginStoryboard Storyboard="{StaticResource systemMove}"/>
                </EventTrigger.Actions>
            </EventTrigger>
            <EventTrigger RoutedEvent="Button.Click" SourceName="systemBack">
                <EventTrigger.Actions>
                    <BeginStoryboard Storyboard="{StaticResource systemMoveBack}"/>
                </EventTrigger.Actions>
            </EventTrigger>
            <EventTrigger RoutedEvent="controls:SubScopeListControl.Selected">
                <EventTrigger.Actions>
                    <BeginStoryboard Storyboard="{StaticResource equipmentMove}"/>
                </EventTrigger.Actions>
            </EventTrigger>
            <EventTrigger RoutedEvent="Button.Click" SourceName="equipmentBack">
                <EventTrigger.Actions>
                    <BeginStoryboard Storyboard="{StaticResource equipmentMoveBack}"/>
                </EventTrigger.Actions>
            </EventTrigger>
        </Grid.Triggers>
        <controls:SystemListControl x:Name="systemList" Grid.Column="0" Grid.Row="1" Source="{Binding SystemSource}"/>
        <Button Content="Back" Click="BackToSystem_Click" x:Name="systemBack" Grid.Column="1" 
                Visibility="{Binding EquipmentWidth, Converter={utilities:WidthDoubleToVisibilityConverter}}"
                Width="50" HorizontalAlignment="Left"/>
        <controls:EquipmentListControl x:Name="equipmentList" Grid.Column="1" Grid.Row="1"
                                       Source="{Binding ElementName=systemList, Path=SelectedItem.Equipment}"
                                       SelectedItem="{Binding SelectedEquipment}"/>
        <Button Content="Back" Click="BackToEquipment_Click" x:Name="equipmentBack" Grid.Column="2" 
                Visibility="{Binding EquipmentWidth, Converter={utilities:WidthDoubleToVisibilityConverter}}"
                Width="50" HorizontalAlignment="Left"/>
        <controls:SubScopeListControl x:Name="subScopeList" Source="{Binding ElementName=equipmentList, Path=SelectedItem.SubScope}"
                                      SelectedItem ="{Binding SelectedSubScope}" 
                                      Grid.Column="2" Grid.Row="1"/>
        <Grid Grid.Column="3" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Devices" Grid.Row="0"/>
                <controls:EndDeviceListControl Source="{Binding ElementName=subScopeList, Path=SelectedItem.Devices}"
                                    SelectedItem="{Binding SelectedDevice}" Grid.Row="1"/>
            <Label Content="Points" Grid.Row="2"/>
                <controls:PointListControl Source="{Binding ElementName=subScopeList, Path=SelectedItem.Points}"
                                    SelectedItem="{Binding SelectedDevice}" Grid.Row="3"/>
        </Grid>

    </Grid>
</UserControl>

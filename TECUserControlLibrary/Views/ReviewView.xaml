<UserControl x:Class="TECUserControlLibrary.Views.ReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.galasoft.ch/ignore"
             
             xmlns:utilities="clr-namespace:TECUserControlLibrary.Utilities"
             
             mc:Ignorable="d ignore"
             x:Name="parent"
             d:DesignWidth="1200"
             d:DesignHeight="720">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <Grid DataContext="{Binding ElementName=parent, Path=ViewModel}"
          Background="{DynamicResource SectionBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Combined Review" Grid.Row="0" FontWeight="Bold"/>

            <Label Content="Bid Name:" Grid.Row="1"/>
            <Label Content="Bid Name:" Grid.Row="1"/>
            <TextBox Text="{Binding Bid.Name}"
                 Margin="2" Grid.Column="1" Grid.Row="1"/>

            <Label Content="Bid Number:" Grid.Row="2"/>
            <TextBox Text="{Binding Bid.BidNumber}"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="2"/>

            <Label Content="Estimator:" Grid.Row="1" 
               Grid.Column="2" />
            <TextBox Text="{Binding Bid.Estimator}"
                 Grid.Row="1"
                 Grid.Column="3"
                 Margin="2"/>

            <Label Content="Salesperson:" Grid.Row="2" Grid.Column="2"/>
            <TextBox Text="{Binding Bid.Salesperson}"
                 Grid.Row="2"
                 Grid.Column="3"
                 Margin="2"/>
            <Label Content="TEC Cost" FontWeight="Bold"
               Grid.Row="4"/>
            <Label Content="Material Cost:" Grid.Row="5" />
            <TextBlock Text="{Binding Bid.Estimate.TECMaterialCost, StringFormat= {} {0:C}}" 
               Grid.Row="5" Grid.Column="1"
               TextAlignment="Right"/>

            <Label Content="Shipping (3%):" Grid.Row="6"/>
            <TextBlock Text="{Binding Bid.Estimate.TECShipping, StringFormat= {} {0:C}}"
                   Grid.Row="6" Grid.Column="1"
                   TextAlignment="Right"/>

            <Label Content="Warranty (5%):" Grid.Row="7"/>
            <TextBlock Text="{Binding Bid.Estimate.TECWarranty, StringFormat= {} {0:C}}"
                   Grid.Row="7" Grid.Column="1"
                   TextAlignment="Right"/>

            <Label Content="Tax:" Grid.Row="8" />
            <TextBlock Text="{Binding Bid.Estimate.Tax, StringFormat= {} {0:C}}" 
               Grid.Row="8" Grid.Column="1"
               TextAlignment="Right" />

            <Label Content="Labor:" Grid.Row="9" />
            <TextBlock Text="{Binding Bid.Estimate.TECLaborCost, StringFormat= {} {0:C}}" 
               Grid.Row="9" Grid.Column="1"
               TextAlignment="Right" />


            <Label Content="Escalation:" 
               Grid.Row="10"/>
            <TextBox Text="{Binding Bid.Parameters.Escalation, StringFormat={}{0}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="10"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

            <Label Content="Overhead:" 
               Grid.Row="11"/>
            <TextBox Text="{Binding Bid.Parameters.Overhead, StringFormat={}{0}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="11"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

            <Label Content="Profit:" 
               Grid.Row="12" />
            <TextBox Text="{Binding Bid.Parameters.Profit, StringFormat={}{0:F2}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="12"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

            <Label Content="Subtotal:" 
               Grid.Row="13"  Grid.Column="0"/>
            <TextBlock Text="{Binding Bid.Estimate.TECSubtotal, StringFormat= {} {0:C}}"
                 Grid.Row="13"
                 Grid.Column="1"
               TextAlignment="Right"/>

            <Label Content="Subcontractor Cost" FontWeight="Bold"
               Grid.Row="14" />

            <Label Content="Material Cost:" Grid.Row="15" />
            <TextBlock Text="{Binding Bid.Estimate.ElectricalMaterialCost, StringFormat= {} {0:C}}" 
               Grid.Row="15" Grid.Column="1"
               TextAlignment="Right"/>

            <Label Content="Shipping (3%):" Grid.Row="16"/>
            <TextBlock Text="{Binding Bid.Estimate.ElectricalShipping, StringFormat= {} {0:C}}"
                   Grid.Row="16" Grid.Column="1"
                   TextAlignment="Right"/>

            <Label Content="Warranty (5%):" Grid.Row="17"/>
            <TextBlock Text="{Binding Bid.Estimate.ElectricalWarranty, StringFormat= {} {0:C}}"
                   Grid.Row="17" Grid.Column="1"
                   TextAlignment="Right"/>

            <Label Content="Labor:" Grid.Row="18" />
            <TextBlock Text="{Binding Bid.Estimate.SubcontractorLaborCost, StringFormat= {} {0:C}}" 
               Grid.Row="18" Grid.Column="1"
               TextAlignment="Right" />

            <Label Content="Escalation:" 
               Grid.Row="19" />
            <TextBox Text="{Binding Bid.Parameters.SubcontractorEscalation, StringFormat={}{0}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="19"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

            <Label Content="Markup:" 
               Grid.Row="20" />
            <TextBox Text="{Binding Bid.Parameters.SubcontractorMarkup, StringFormat={}{0}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="20"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

            <Label Content="Subtotal:" 
               Grid.Row="21" />
            <TextBlock Text="{Binding Bid.Estimate.SubcontractorSubtotal, StringFormat= {} {0:C}}"
                 Grid.Row="21"
                 Grid.Column="1"
               TextAlignment="Right"/>

            <Grid  Grid.Column="4" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Tax Exempt:"/>
                <CheckBox IsChecked="{Binding Bid.Parameters.IsTaxExempt}"
                  HorizontalAlignment="Right" VerticalAlignment="Center"
                 Grid.Column="1" Margin="0,0,5,0"/>
            </Grid>

            <Grid  Grid.Column="4" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Bond:" />
                <CheckBox IsChecked="{Binding Bid.Parameters.RequiresBond}"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                 Grid.Column="1" Margin="0,0,5,0"/>
            </Grid>
            <!--<Grid  Grid.Column="5" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Wrap-Up:" />
            <CheckBox IsChecked="{Binding Bid.Parameters.RequiresWrapUp}"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                 Grid.Column="1" Margin="0,0,5,0"/>
        </Grid>-->





            <Label Content="Margin:" Grid.Row="4" Grid.Column="3"/>


            <Label Content="Total Price:" 
               Grid.Row="4"  Grid.Column="4"
               FontWeight="Bold"
               FontStyle="Italic" />
            <Border Grid.Row="9"
                 Grid.Column="4"
                BorderThickness="2"
                BorderBrush="Black">
                <TextBlock Text="{Binding Bid.Estimate.TotalPrice, StringFormat= {} {0:C}}" 
                       TextAlignment="Right"/>
            </Border>

            <Label Content="Total Markup:" Grid.Row="4" Grid.Column="5"/>
            <TextBlock Text="{Binding Bid.Estimate.Margin, StringFormat={} {0:F2}%}" 
               Grid.Row="9" Grid.Column="3"
               TextAlignment="Right"/>
            <Border  Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="3"
                 BorderThickness="0 0 0 2" BorderBrush="Black"/>
            <TextBlock Text="{Binding MarginM8, StringFormat=' \{0:F2\}%'}" 
            Grid.Row="5" Grid.Column="3"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding MarginM6, StringFormat=' \{0:F2\}%'}" 
            Grid.Row="6" Grid.Column="3"
            TextAlignment="Right" />
            <TextBlock Text="{Binding MarginM4, StringFormat=' \{0:F2\}%'}" 
            Grid.Row="7" Grid.Column="3"
            TextAlignment="Right" />
            <TextBlock Text="{Binding MarginM2, StringFormat=' \{0:F2\}%'}" 
            Grid.Row="8" Grid.Column="3"
            TextAlignment="Right" />
            <TextBlock Text="{Binding MarginP2, StringFormat=' \{0:F2\}%'}" 
            Grid.Row="10" Grid.Column="3"
            TextAlignment="Right" />
            <TextBlock Text="{Binding MarginP4, StringFormat=' \{0:F2\}%'}" 
            Grid.Row="11" Grid.Column="3"
            TextAlignment="Right" />
            <TextBlock Text="{Binding MarginP6, StringFormat=' \{0:F2\}%'}" 
            Grid.Row="12" Grid.Column="3"
            TextAlignment="Right" />
            <TextBlock Text="{Binding MarginP8, StringFormat=' \{0:F2\}%'}" 
            Grid.Row="13" Grid.Column="3"
            TextAlignment="Right"/>

            <TextBlock Grid.Row="5" Grid.Column="4" 
                    Text="{Binding TotalPriceM8, StringFormat= {} {0:C}}" 
                   TextAlignment="Right"/>
            <TextBlock Grid.Row="6" Grid.Column="4" 
                    Text="{Binding TotalPriceM6, StringFormat= {} {0:C}}" 
                   TextAlignment="Right"/>
            <TextBlock Grid.Row="7" Grid.Column="4" 
                    Text="{Binding TotalPriceM4, StringFormat= {} {0:C}}" 
                   TextAlignment="Right"/>
            <TextBlock Grid.Row="8" Grid.Column="4" 
                    Text="{Binding TotalPriceM2, StringFormat= {} {0:C}}"
                   TextAlignment="Right" />
            <TextBlock Grid.Row="10" Grid.Column="4" 
                    Text="{Binding TotalPriceP2, StringFormat= {} {0:C}}" 
                   TextAlignment="Right" />
            <TextBlock Grid.Row="11" Grid.Column="4" 
                    Text="{Binding TotalPriceP4, StringFormat= {} {0:C}}" 
                   TextAlignment="Right" />
            <TextBlock Grid.Row="12" Grid.Column="4" 
                    Text="{Binding TotalPriceP6, StringFormat= {} {0:C}}" 
                   TextAlignment="Right"/>
            <TextBlock Grid.Row="13" Grid.Column="4" 
                    Text="{Binding TotalPriceP8, StringFormat= {} {0:C}}" 
                   TextAlignment="Right"/>

            <TextBlock Text="{Binding MarkupM8, StringFormat=' \{0:C\}'}"
            Grid.Row="5"
            Grid.Column="5"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding MarkupM6, StringFormat=' \{0:C\}'}"
            Grid.Row="6"
            Grid.Column="5"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding MarkupM4, StringFormat=' \{0:C\}'}"
            Grid.Row="7"
            Grid.Column="5"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding MarkupM2, StringFormat=' \{0:C\}'}"
            Grid.Row="8"
            Grid.Column="5"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding Markup, StringFormat=' \{0:C\}'}"
            Grid.Row="9"
            Grid.Column="5"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding MarkupP2, StringFormat=' \{0:C\}'}"
            Grid.Row="10"
            Grid.Column="5"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding MarkupP4, StringFormat=' \{0:C\}'}"
            Grid.Row="11"
            Grid.Column="5"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding MarkupP6, StringFormat=' \{0:C\}'}"
            Grid.Row="12"
            Grid.Column="5"
            TextAlignment="Right"/>
            <TextBlock Text="{Binding MarkupP8, StringFormat=' \{0:C\}'}"
            Grid.Row="13"
            Grid.Column="5"
            TextAlignment="Right"/>

            <Border BorderThickness="1" BorderBrush="Black"
                Grid.Column="3" Grid.Row="4"
                Grid.ColumnSpan="3" Grid.RowSpan="10"/>

            <Label Content="Totals" FontWeight="Bold"
               Grid.Row="14" Grid.Column="3" />

            <Label Content="Total Price:" 
               Grid.Row="16"
               FontWeight="Bold"
               FontStyle="Italic" Grid.Column="3"/>
            <Border Grid.Row="16"
            Grid.Column="4"
            BorderThickness="2"
            BorderBrush="Black">
                <TextBlock Text="{Binding Bid.Estimate.TotalPrice, StringFormat=' \{0:C\}'}" TextAlignment="Right"/>
            </Border>

            <Label Content="Total Cost:" 
            Grid.Row="15" Grid.Column="3"/>
            <TextBlock Text="{Binding Bid.Estimate.TotalCost, StringFormat=' \{0:C\}'}"
            Grid.Row="15"
            Grid.Column="4"
            TextAlignment="Right"/>
            <Label Content="Total Markup:" 
            Grid.Row="17" Grid.Column="3"/>
            <TextBlock Text="{Binding Markup, StringFormat=' \{0:C\}'}"
            Grid.Row="17"
            Grid.Column="4"
            TextAlignment="Right"/>

            <Label Content="Price per Point:" Grid.Row="18" Grid.Column="3"/>
            <TextBlock Text="{Binding Bid.Estimate.PricePerPoint, StringFormat= {} {0:C}}" 
               Grid.Row="18" Grid.Column="4"
               TextAlignment="Right"/>
            <Label Content="Set Price:" 
            Grid.Row="19" Grid.Column="3"/>
            <TextBox Text="{Binding UserPrice, StringFormat= {} {0:C}}"
            Grid.Row="19"
            Grid.Column="4" Margin="2"
            HorizontalContentAlignment="Right"/>
        </Grid>
    </ScrollViewer>
</UserControl>

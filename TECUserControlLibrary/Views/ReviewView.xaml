<UserControl x:Class="TECUserControlLibrary.Views.ReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.galasoft.ch/ignore"
             
             xmlns:utilities="clr-namespace:TECUserControlLibrary.Utilities"
             
             mc:Ignorable="d ignore"
             x:Name="parent"
             d:DesignWidth="1200"
             d:DesignHeight="720">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <Grid DataContext="{Binding ElementName=parent, Path=ViewModel}"
          Background="{DynamicResource SectionBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Combined Review" Grid.Row="0" FontWeight="Bold"/>

            <Label Content="Bid Name:" Grid.Row="1"/>
            <Label Content="Bid Name:" Grid.Row="1"/>
            <TextBox Text="{Binding Bid.Name}"
                 Margin="2" Grid.Column="1" Grid.Row="1"/>

            <Label Content="Bid Number:" Grid.Row="2"/>
            <TextBox Text="{Binding Bid.BidNumber}"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="2"/>

            <Label Content="Estimator:" Grid.Row="1" 
               Grid.Column="2" />
            <TextBox Text="{Binding Bid.Estimator}"
                 Grid.Row="1"
                 Grid.Column="3"
                 Margin="2"/>

            <Label Content="Salesperson:" Grid.Row="2" Grid.Column="2"/>
            <TextBox Text="{Binding Bid.Salesperson}"
                 Grid.Row="2"
                 Grid.Column="3"
                 Margin="2"/>
            <!--TEC-->
            <Grid Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="TEC Cost" FontWeight="Bold"/>
                <Label Content="Material Cost:" Grid.Row="1" />
                <TextBlock Text="{Binding Estimate.TECMaterialCost, StringFormat= {} {0:C}}" 
               Grid.Row="1" Grid.Column="1"
               TextAlignment="Right"/>

                <Label Content="Tax:" Grid.Row="2" />
                <TextBlock Text="{Binding Estimate.Tax, StringFormat= {} {0:C}}" 
               Grid.Row="2" Grid.Column="1"
               TextAlignment="Right" />

                <Grid  Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Shipping:"/>
                    <TextBox Text="{Binding Bid.Parameters.Shipping, StringFormat={}{0}%}"
                             Grid.Column="1" Margin="2"
                             HorizontalContentAlignment="Right"/>
                </Grid>
                <TextBlock Text="{Binding Estimate.TECShipping, StringFormat= {} {0:C}}"
                   Grid.Row="3" Grid.Column="1"
                   TextAlignment="Right"/>
                <Grid  Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Warranty:"/>
                    <TextBox Text="{Binding Bid.Parameters.Warranty, StringFormat={}{0}%}"
                             Grid.Column="1" Margin="2"
                             HorizontalContentAlignment="Right"/>
                </Grid>
                <TextBlock Text="{Binding Estimate.TECWarranty, StringFormat= {} {0:C}}"
                   Grid.Row="4" Grid.Column="1"
                   TextAlignment="Right"/>

                <TextBlock Text="{Binding Estimate.TECWarranty, StringFormat= {} {0:C}}"
                   Grid.Row="4" Grid.Column="1"
                   TextAlignment="Right"/>

                <Label Content="Labor:" Grid.Row="5" />
                <TextBlock Text="{Binding Estimate.TECLaborCost, StringFormat= {} {0:C}}" 
               Grid.Row="5" Grid.Column="1"
               TextAlignment="Right" />


                <Label Content="Escalation:" 
               Grid.Row="6"/>
                <TextBox Text="{Binding Bid.Parameters.Escalation, StringFormat={}{0}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="6"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

                <Label Content="Overhead:" 
               Grid.Row="7"/>
                <TextBox Text="{Binding Bid.Parameters.Overhead, StringFormat={}{0}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="7"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

                <Label Content="Profit:" 
               Grid.Row="8" />
                <TextBox Text="{Binding Bid.Parameters.Profit, StringFormat={}{0:F2}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="8"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

                <Label Content="Subtotal:" 
               Grid.Row="9"  Grid.Column="0"/>
                <TextBlock Text="{Binding Estimate.TECSubtotal, StringFormat= {} {0:C}}"
                 Grid.Row="9"
                 Grid.Column="1"
               TextAlignment="Right"/>
            </Grid>
            

            
            

            <Grid  Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Tax Exempt:"/>
                <CheckBox IsChecked="{Binding Bid.Parameters.IsTaxExempt}"
                  HorizontalAlignment="Right" VerticalAlignment="Center"
                 Grid.Column="1" Margin="0,0,5,0"/>
                <Label Content="Tax Rate:" Grid.Column="2"/>
                <TextBox Text="{Binding Bid.Parameters.Tax, StringFormat={}{0}%}"
                         Grid.Column="3" Margin="2"/>
            </Grid>

            <Grid  Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Bond:" />
                <CheckBox IsChecked="{Binding Bid.Parameters.RequiresBond}"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                 Grid.Column="1" Margin="0,0,5,0"/>
                <Label Content="Bond Rate:" Grid.Column="2"/>
                <TextBox Text="{Binding Bid.Parameters.BondRate, StringFormat={}{0}%}"
                         Grid.Column="3" Margin="2"/>
            </Grid>
            <!--<Grid  Grid.Column="5" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Wrap-Up:" />
            <CheckBox IsChecked="{Binding Bid.Parameters.RequiresWrapUp}"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                 Grid.Column="1" Margin="0,0,5,0"/>
        </Grid>-->


            <!--SubContractor-->
            <Grid Grid.Row="4" Grid.RowSpan="8" Grid.Column="3" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Subcontractor Cost" FontWeight="Bold"/>

                <Label Content="Material Cost:" Grid.Row="1" />
                <TextBlock Text="{Binding Estimate.ElectricalMaterialCost, StringFormat= {} {0:C}}" 
               Grid.Row="1" Grid.Column="1"
               TextAlignment="Right"/>

                <Grid  Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Shipping:"/>
                    <TextBox Text="{Binding Bid.Parameters.SubcontractorShipping, StringFormat={}{0}%}"
                             Grid.Column="1" Margin="2"
                             HorizontalContentAlignment="Right"/>
                </Grid>
                <TextBlock Text="{Binding Estimate.ElectricalShipping, StringFormat= {} {0:C}}"
                   Grid.Row="2" Grid.Column="1"
                   TextAlignment="Right"/>

                <Grid  Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Warranty:"/>
                    <TextBox Text="{Binding Bid.Parameters.SubcontractorWarranty, StringFormat={}{0}%}"
                             Grid.Column="1" Margin="2"
                             HorizontalContentAlignment="Right"/>
                </Grid>
                <TextBlock Text="{Binding Estimate.ElectricalWarranty, StringFormat= {} {0:C}}"
                   Grid.Row="3" Grid.Column="1"
                   TextAlignment="Right"/>

                <Label Content="Labor:" Grid.Row="4" />
                <TextBlock Text="{Binding Estimate.SubcontractorLaborCost, StringFormat= {} {0:C}}" 
               Grid.Row="4" Grid.Column="1"
               TextAlignment="Right" />

                <Label Content="Escalation:" 
               Grid.Row="5" />
                <TextBox Text="{Binding Bid.Parameters.SubcontractorEscalation, StringFormat={}{0}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="5"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

                <Label Content="Markup:" 
               Grid.Row="6" />
                <TextBox Text="{Binding Bid.Parameters.SubcontractorMarkup, StringFormat={}{0}%, Converter={utilities:PercentageToNumberConverter}}"
                 Grid.Row="6"
                 Grid.Column="1"
                 Margin="2"
                 HorizontalContentAlignment="Right"/>

                <Label Content="Subtotal:" 
               Grid.Row="7" />
                <TextBlock Text="{Binding Estimate.SubcontractorSubtotal, StringFormat= {} {0:C}}"
                 Grid.Row="7"
                 Grid.Column="1"
               TextAlignment="Right"/>
            </Grid>

            <!--Total-->
            <Grid Grid.Row="14"  Grid.RowSpan="4" Grid.ColumnSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Totals" FontWeight="Bold"/>

                <Label Content="Price per Point:" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Text="{Binding Estimate.PricePerPoint, StringFormat= {} {0:C}}" 
               Grid.Row="1" Grid.Column="1"
               TextAlignment="Right"/>
                <Label Content="Set Price:" 
            Grid.Row="3" Grid.Column="0"/>
                <TextBox Text="{Binding UserPrice, StringFormat= {} {0:C}}"
            Grid.Row="3"
            Grid.Column="1" Margin="2"
            HorizontalContentAlignment="Right"/>
                
                <Label Content="Total Cost:" 
            Grid.Row="1" Grid.Column="2"/>
                <TextBlock Text="{Binding Estimate.TotalCost, StringFormat=' \{0:C\}'}"
            Grid.Row="1"
            Grid.Column="3"
            TextAlignment="Right"/>
                <Label Content="Total Markup:" 
            Grid.Row="2" Grid.Column="2"/>
                <TextBlock Text="{Binding Estimate.Markup, StringFormat=' \{0:C\}'}"
            Grid.Row="2"
            Grid.Column="3"
            TextAlignment="Right"/>
                
                <Label Content="Total Price:" 
               Grid.Row="3" Grid.Column="2"
               FontWeight="Bold"
               FontStyle="Italic"/>
                <Border Grid.Row="3"
            Grid.Column="3"
            BorderThickness="2"
            BorderBrush="Black">
                    <TextBlock Text="{Binding Estimate.TotalPrice, StringFormat=' \{0:C\}'}" TextAlignment="Right"/>
                </Border>
                
            </Grid>
            
        </Grid>
    </ScrollViewer>
</UserControl>

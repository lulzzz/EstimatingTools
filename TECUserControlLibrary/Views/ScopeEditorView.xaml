<UserControl x:Class="TECUserControlLibrary.Views.ScopeEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.galasoft.ch/ignore"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:views="clr-namespace:TECUserControlLibrary.Views"     
             xmlns:utilities="clr-namespace:TECUserControlLibrary.Utilities"
             xmlns:controls="clr-namespace:TECUserControlLibrary.UserControls"
             mc:Ignorable="d ignore"
             x:Name="parent"
             d:DesignWidth="960" d:DesignHeight="640">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../TECResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{DynamicResource WindowBackgroundBrush}"
           DataContext="{Binding ElementName=parent, Path=ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding TemplatesVisibility, Converter={utilities:TemplatesVisibilityConverter}}"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*" MinHeight="40"/>
        </Grid.RowDefinitions>

        <views:ScopeCollectionsTabView Grid.Column="0" Grid.Row="0"
                                         Grid.RowSpan="2"
                                         ViewModel="{Binding ScopeCollection}"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Grid.RowSpan="2"/>
        <TabControl Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    SelectedIndex="{Binding DGTabIndex, Converter={utilities:GridIndexToIntegerConverter}}">

            <TabItem Header="NoneTab" Visibility="Collapsed"/>
            <TabItem Header="Typical Systems">
                <views:AddControlledScopeView ViewModel="{Binding AddControlledScopeTab}"/>
            </TabItem>
            <TabItem Header="All Systems">
                <controls:ControlledScopeSystemsGridContol ControlledScopeSource="{Binding Bid.Systems}"
                                                  ViewModel="{Binding ScopeDataGrid}"/>
            </TabItem>
            
            <TabItem Header="Controllers and Panels">
                <views:ControllersPanelsView ViewModel="{Binding ControllersPanelsTab}"/>
            </TabItem>

            <TabItem Header="By Location">
                <views:LocationView LocationSource="{Binding Bid.Locations}"
                                            ViewModel="{Binding LocationDataGrid}"/>
            </TabItem>
            <!--Proposal And Budget-->
            <TabItem Visibility="Collapsed"/>
            <TabItem Visibility="Collapsed"/>
            <TabItem Header="Misc.">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Misc. Costs" Grid.Row="0"
                                FontWeight="Bold" Foreground="Black"
                                VerticalAlignment="Center" Margin="5,7,0,7"/>
                        <controls:MiscCostGridControl CostSource="{Binding TECCostCollection}"
                                  Grid.Row="1" Grid.Column="1"
                                  Margin="5"
                                  ViewModel="{Binding}"/>

                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Misc. Wiring" Grid.Row="0"
                                FontWeight="Bold" Foreground="Black"
                                VerticalAlignment="Center" Margin="5,7,0,7"/>
                        <controls:MiscCostGridControl CostSource="{Binding ElectricalCostCollection}"
                                  Grid.Row="1" Grid.Column="1"
                                  Margin="5"
                                  ViewModel="{Binding}"/>
                    </Grid>
                </Grid>
            </TabItem>
            
        </TabControl>
        <GridSplitter Grid.Column="5" HorizontalAlignment="Stretch" Grid.RowSpan="2"/>

        <!--Right Tab Control-->
        <views:EditTabView ViewModel="{Binding EditTab}"
                             Grid.Column="6" Grid.Row="0" Grid.RowSpan="2"/>
    </Grid>
</UserControl>

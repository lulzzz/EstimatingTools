<UserControl x:Class="TECUserControlLibrary.Views.NetworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.Views"
             xmlns:grids="clr-namespace:TECUserControlLibrary.DataGrids"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:cLib="clr-namespace:TECUserControlLibrary"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:cnvt="clr-namespace:TECUserControlLibrary.HelperConverters"
             mc:Ignorable="d" 
             x:Name="parent"
             d:DesignHeight="720" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <cLib:BindingProxy x:Key="proxy" Data="{Binding ViewModel, ElementName=parent}"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding ViewModel, ElementName=parent}"
           Background="{DynamicResource TextBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Server Grid-->
        <Grid Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Servers"
                        Foreground="{DynamicResource DarkTextBrush}"
                    HorizontalAlignment="Center"/>


            <DataGrid Grid.Row="1" ItemsSource="{Binding ServerControllers}"
                    AutoGenerateColumns="False"
                      dd:DragDrop.DropHandler="{Binding ViewModel, ElementName=parent}"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        IsReadOnly="True"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Border Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--BMS Grid-->
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="BMS Controllers"
                       Foreground="{DynamicResource DarkTextBrush}"
                       HorizontalAlignment="Center"/>

            <Grid Grid.Row="1">
                <DataGrid ItemsSource="{Binding BMSControllers}"
                          AutoGenerateColumns="False"
                          dd:DragDrop.DropHandler="{Binding ViewModel, ElementName=parent}"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" CellTemplate="{StaticResource ExpandDetails}" Width="30"/>
                        <DataGridTextColumn Header="Controller"
                                    Binding="{Binding Name}"
                                    IsReadOnly="True"
                                    Width="Auto"/>
                        <DataGridComboBoxColumn Header="Networked To" 
                                        ItemsSource="{Binding Data.NetworkControllers, Source={StaticResource proxy}}" SelectedItemBinding="{Binding ParentController, Converter={cnvt:SelectedItemToControllerConverter}, UpdateSourceTrigger=PropertyChanged}"
                                        DisplayMemberPath="Name"
                                        Width="Auto"/>
                            <DataGridComboBoxColumn Header="IO"
                                        ItemsSource="{Binding NetworkIO}" SelectedItemBinding="{Binding ParentConnection.IOType}"
                                        DisplayMemberPath="Name"
                                        Width="Auto"/>
                        <DataGridComboBoxColumn Header="Wire"
                                        ItemsSource="{Binding Data.Bid.ConnectionTypes, Source={StaticResource proxy}}" SelectedItemBinding="{Binding ParentConnection.ConnectionType}"
                                        DisplayMemberPath="Name"
                                        Width="Auto"/>
                        <DataGridTextColumn Header="Length"
                                    Binding="{Binding ParentConnection.Length, Mode=TwoWay}"
                                    Width="Auto"/>
                        <DataGridComboBoxColumn Header="Conduit"
                                        ItemsSource="{Binding Data.Bid.ConduitTypes, Source={StaticResource proxy}}" SelectedItemBinding="{Binding ParentConnection.ConduitType}"
                                        DisplayMemberPath="Name"
                                        Width="Auto"/>
                        <DataGridCheckBoxColumn Header="Connected"
                                        Binding="{Binding Converter={cnvt:ControllerIsConnnectedConverter}, Mode=OneWay}"
                                        IsReadOnly="True"
                                        Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Grid>
        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--Standalone Grid-->
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Standalone Controllers"
                       Foreground="{DynamicResource DarkTextBrush}"
                       HorizontalAlignment="Center"/>
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding StandaloneControllers}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      dd:DragDrop.DropHandler="{Binding ViewModel, ElementName=parent}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        IsReadOnly="True"
                                        Width="Auto"/>
                    <DataGridTextColumn Header="Description"
                                        Binding="{Binding Description}"
                                        IsReadOnly="True"
                                        Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>


    </Grid>
</UserControl>

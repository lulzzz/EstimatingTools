<UserControl x:Class="TECUserControlLibrary.Views.NetworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.Views"
             xmlns:grids="clr-namespace:TECUserControlLibrary.DataGrids"
             xmlns:dd="urn:gong-wpf-dragdrop"
             mc:Ignorable="d" 
             x:Name="parent"
             d:DesignHeight="720" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding ElementName=parent, Path=ViewModel}"
           Background="{DynamicResource TextBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Server Grid-->
        <Grid Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Servers"
                        Foreground="{DynamicResource DarkTextBrush}"
                    HorizontalAlignment="Center"/>


            <DataGrid Grid.Row="1" ItemsSource="{Binding Path=ServerControllers}"
                    AutoGenerateColumns="False"
                      dd:DragDrop.DropHandler="{Binding ElementName=parent, Path=ViewModel}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        IsReadOnly="True"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Border Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--BMS Grid-->
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="BMS Controllers"
                       Foreground="{DynamicResource DarkTextBrush}"
                       HorizontalAlignment="Center"/>

            <grids:NetworkGridControl Grid.Row="1" ViewModel="{Binding}" ControllerConnectionsSource="{Binding Path=BMSControllers}"/>

        </Grid>
        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--Standalone Grid-->
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Standalone Controllers"
                       Foreground="{DynamicResource DarkTextBrush}"
                       HorizontalAlignment="Center"/>
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Path=StandaloneControllers}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      dd:DragDrop.DropHandler="{Binding ElementName=parent, Path=ViewModel}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        IsReadOnly="True"
                                        Width="Auto"/>
                    <DataGridTextColumn Header="Description"
                                        Binding="{Binding Description}"
                                        IsReadOnly="True"
                                        Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
            
        </Grid>
        <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        
    </Grid>
</UserControl>

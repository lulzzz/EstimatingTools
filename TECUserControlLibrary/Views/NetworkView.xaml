<UserControl x:Class="TECUserControlLibrary.Views.NetworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.Views"
             xmlns:grids="clr-namespace:TECUserControlLibrary.DataGrids"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:cLib="clr-namespace:TECUserControlLibrary"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:cnvt="clr-namespace:TECUserControlLibrary.HelperConverters"
             mc:Ignorable="d" 
             x:Name="parent"
             d:DesignHeight="720" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <cLib:BindingProxy x:Key="proxy" Data="{Binding ViewModel, ElementName=parent}"/>
            <DataTemplate x:Key="ClearButton">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource Self}}">
                    <Button Name="ClearParentController"
                        Command="{Binding DataContext.ClearParentControllerCommand, RelativeSource={RelativeSource AncestorType=DataGridRow}}"
                        Content="Clear"
                        Margin="5"
                        />
                </StackPanel>
                
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding ViewModel, ElementName=parent}"
           Background="{DynamicResource TextBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Server Grid-->
        <Grid Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Servers"
                        Foreground="{DynamicResource DarkTextBrush}"
                    HorizontalAlignment="Center"/>


            <DataGrid Grid.Row="1" ItemsSource="{Binding ServerControllers}"
                    AutoGenerateColumns="False"
                      dd:DragDrop.DropHandler="{Binding ViewModel, ElementName=parent}"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        IsReadOnly="True"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Border Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--BMS Grid-->
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="BMS Controllers"
                       Foreground="{DynamicResource DarkTextBrush}"
                       HorizontalAlignment="Center"/>

            <Grid Grid.Row="1">
                <DataGrid ItemsSource="{Binding BMSControllers}"
                          AutoGenerateColumns="False"
                          dd:DragDrop.DropHandler="{Binding ViewModel, ElementName=parent}"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" CellTemplate="{StaticResource ExpandDetails}" Width="30"/>
                        <DataGridTextColumn Header="Controller"
                                    Binding="{Binding Path=Controller.Name}"
                                    IsReadOnly="True"
                                    Width="Auto"/>
                        
                        <!--Mess of styles is to set the DataContext of the DataGridComboBoxColumn to the DataGridRowItem-->
                        <DataGridComboBoxColumn Header="Networked To" 
                                        SelectedItemBinding="{Binding Path=ParentController, UpdateSourceTrigger=PropertyChanged}"
                                        DisplayMemberPath="Name"
                                        Width="Auto">
                            <DataGridComboBoxColumn.ElementStyle>
                                <Style TargetType="ComboBox">
                                    <Setter Property="ItemsSource" Value="{Binding Path=PossibleParents}"/>
                                </Style>
                            </DataGridComboBoxColumn.ElementStyle>
                            <DataGridComboBoxColumn.EditingElementStyle>
                                <Style TargetType="ComboBox">
                                    <Setter Property="ItemsSource" Value="{Binding Path=PossibleParents}"/>
                                </Style>
                            </DataGridComboBoxColumn.EditingElementStyle>
                        </DataGridComboBoxColumn>
                        <!--I don't actually know how it works but it does. Something to do with DataGridComboBoxColumn not actually being part of the visual tree.-->
                        <DataGridTemplateColumn CellTemplate="{StaticResource ClearButton}" Width="50"/>

                        <DataGridComboBoxColumn Header="IO"
                                        ItemsSource="{Binding Path=Controller.NetworkIO}" SelectedItemBinding="{Binding Path=Controller.ParentConnection.IOType}"
                                        Width="Auto"/>
                        <DataGridComboBoxColumn Header="Wire"
                                        ItemsSource="{Binding Data.Bid.ConnectionTypes, Source={StaticResource proxy}}" SelectedItemBinding="{Binding Path=Controller.ParentConnection.ConnectionType}"
                                        DisplayMemberPath="Name"
                                        Width="Auto"/>
                        <DataGridTextColumn Header="Length"
                                    Binding="{Binding Path=Controller.ParentConnection.Length, Mode=TwoWay}"
                                    Width="Auto"/>
                        <DataGridComboBoxColumn Header="Conduit"
                                        ItemsSource="{Binding Data.Bid.ConduitTypes, Source={StaticResource proxy}}" SelectedItemBinding="{Binding Path=Controller.ParentConnection.ConduitType}"
                                        DisplayMemberPath="Name"
                                        Width="Auto"/>
                        <DataGridCheckBoxColumn Header="Connected"
                                        Binding="{Binding IsConnected, Mode=OneWay}"
                                        IsReadOnly="True"
                                        Width="Auto"/>
                    </DataGrid.Columns>
                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Daisy Chains" FontSize="10"/>
                                    <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Controller.NetworkIO}"
                                      SelectedItem="{Binding Data.SelectedIO, Source={StaticResource proxy}}"
                                      Margin="5"/>
                                    <Button Grid.Column="2"
                                    Content="Add"
                                    Command="{Binding Data.AddConnectionCommand, Source={StaticResource proxy}}"
                                    CommandParameter="{Binding Controller}"
                                    Margin="5"/>
                                </Grid>
                                <DataGrid ItemsSource="{Binding Controller.ChildNetworkConnections}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="" CellTemplate="{StaticResource ExpandDetails}" Width="30"/>
                                        <DataGridTextColumn Header="IO Type"
                                                    Binding="{Binding IOTypes, Converter={cnvt:ConnectionIOConverter}}"/>
                                        <DataGridTextColumn Binding="{Binding Scope.Count}" Header="Qty Controllers"/>
                                    </DataGrid.Columns>
                                    <DataGrid.RowDetailsTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <Label Content="Controllers" FontSize="10"/>
                                                <DataGrid ItemsSource="{Binding ChildrenControllers}"
                                                  AutoGenerateColumns="False"
                                                  IsReadOnly="True">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Name"
                                                                    Binding="{Binding Name}"
                                                                    IsReadOnly="True"
                                                                    Width="Auto"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGrid.RowDetailsTemplate>
                                </DataGrid>
                            </StackPanel>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </Grid>

        </Grid>
        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--Standalone Grid-->
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Standalone Controllers"
                       Foreground="{DynamicResource DarkTextBrush}"
                       HorizontalAlignment="Center"/>
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding StandaloneControllers}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      dd:DragDrop.DropHandler="{Binding ViewModel, ElementName=parent}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        IsReadOnly="True"
                                        Width="Auto"/>
                    <DataGridTextColumn Header="Description"
                                        Binding="{Binding Description}"
                                        IsReadOnly="True"
                                        Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>


    </Grid>
</UserControl>

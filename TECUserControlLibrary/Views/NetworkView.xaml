<UserControl x:Class="TECUserControlLibrary.Views.NetworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.Views"
             xmlns:grids="clr-namespace:TECUserControlLibrary.DataGrids"
             mc:Ignorable="d" 
             x:Name="parent"
             d:DesignHeight="720" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding ElementName=parent, Path=ViewModel}"
           Background="{DynamicResource TextBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Server Grid-->
        <Grid Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Servers"
                        Foreground="{DynamicResource DarkTextBrush}"
                    HorizontalAlignment="Center"/>


            <DataGrid Grid.Row="1" ItemsSource="{Binding Path=ServerSource}"
                    AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Controller.Name}"
                                        IsReadOnly="True"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding Path=BMSControllerSource}"
                          SelectedItem="{Binding Path=SelectedBMSController}"
                          Margin="5"/>
                <Button Grid.Column="1" Margin="5"
                        Content="Add"
                        Command="{Binding Path=AddServerCommand}"/>
            </Grid>
        </Grid>
        <Border Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--BMS Grid-->
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <TextBlock Text="BMS Controllers"
                       Foreground="{DynamicResource DarkTextBrush}"
                       HorizontalAlignment="Center"/>

            <grids:NetworkGridControl Grid.Row="1" ViewModel="{Binding}"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="1" ItemsSource="{Binding Path=GeneralControllerSource}"
                          SelectedItem="{Binding Path=SelectedGeneralController}"
                          Margin="5"/>
                <Button Grid.Column="2" Margin="5"
                        Content="Add"
                        Command="{Binding Path=AddBMSControllerCommand}"/>
            </Grid>
        </Grid>
        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--General Grid-->
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="General Controllers"
                       Foreground="{DynamicResource DarkTextBrush}"
                       HorizontalAlignment="Center"/>
            <grids:NetworkGridControl Grid.Row="1" ViewModel="{Binding}"/>
        </Grid>
        <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="1 1 1 1"/>

        <!--Has BMS-->
        
        
    </Grid>
</UserControl>

<UserControl x:Class="TECUserControlLibrary.UserControls.ItemControls.SubScopeConnectionItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.UserControls.ItemControls"
             xmlns:userControls="clr-namespace:TECUserControlLibrary.UserControls"
             mc:Ignorable="d"
             x:Name="subScopeConnectionItemControl">

    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Border>
        <Grid DataContext="{Binding ElementName=subScopeConnectionItemControl, Path=SubScopeConnection}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="{Binding SubScope.Name}"/>
            <Label Content="{Binding SubScope.Description}" Grid.Row="1"/>

            <Label Content="Connection Types" Grid.Column="1"/>
            <userControls:ElectricalMaterialListControl 
                Source="{Binding ConnectionTypes}"
                Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>

            <Label Content="IO Types" Grid.Column="2"/>
            <userControls:IOListControl 
                Source="{Binding IOList}"
                Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"/>
            <Border Grid.ColumnSpan="3" Grid.RowSpan="3"/>

            <Label Content="Controller:" Grid.Row="3"/>
            <Label Content="{Binding ParentController.Name}" Grid.Column="1" Grid.Row="3"/>
            <Border Grid.Row="3" Grid.ColumnSpan="2"/>

            <Label Content="Wire Length:" Grid.Row="4"/>
            <TextBox Text="{Binding Length}" Grid.Column="1" Grid.Row="4"/>
            <Border Grid.Row="4" Grid.ColumnSpan="2"/>

            <Label Content="Conduit Length:" Grid.Row="5"/>
            <TextBox Text="{Binding ConduitLength}" Grid.Column="1" Grid.Row="5"/>
            <Border Grid.Row="5" Grid.ColumnSpan="2"/>

            <Label Content="Conduit Type:" Grid.Row="3" Grid.Column="2"/>
            <ListBox SelectedItem="{Binding ConduitType}" 
                 ItemsSource="{Binding ElementName=subScopeConnectionItemControl, Path=ConduitTypes}"
                 Grid.Row="4" Grid.Column="2"/>
            <Border Grid.Column="2" Grid.Row="3" Grid.RowSpan="3"/>
        </Grid>
    </Border>
</UserControl>

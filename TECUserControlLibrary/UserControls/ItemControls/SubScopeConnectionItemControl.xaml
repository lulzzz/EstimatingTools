<UserControl x:Class="TECUserControlLibrary.UserControls.ItemControls.SubScopeConnectionItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.UserControls.ItemControls"
             xmlns:userControls="clr-namespace:TECUserControlLibrary.UserControls"
             xmlns:listControls="clr-namespace:TECUserControlLibrary.UserControls.ListControls"
             xmlns:converters="clr-namespace:TECUserControlLibrary.Utilities"
             mc:Ignorable="d"
             x:Name="subScopeConnectionItemControl">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border>
        <Grid DataContext="{Binding ElementName=subScopeConnectionItemControl, Path=SubScope}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="{Binding Name}"/>
            <Label Content="{Binding Description}" Grid.Row="1"/>

            <Label Content="Connection Types" Grid.Column="1"/>
            <listControls:ElectricalMaterialListControl 
                Source="{Binding Connection.ConnectionTypes}"
                Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>

            <Label Content="IO Types" Grid.Column="2"/>
            <listControls:IOListControl 
                Source="{Binding Connection.IOList}"
                Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"/>
            <Border Grid.ColumnSpan="3" Grid.RowSpan="3"/>

            <Label Content="Controller:" Grid.Row="3"/>
            <Label Content="{Binding Connection.ParentController.Name}" Grid.Column="1" Grid.Row="3"/>
            <Border Grid.Row="3" Grid.ColumnSpan="2"/>

            <Label Content="Wire Length:" Grid.Row="4"/>
            <Grid Grid.Column="1" Grid.Row="4">
                <Label Content="{Binding Connection.Length}" 
                   Visibility="{Binding ElementName=subScopeConnectionItemControl, Path=ReadOnly, 
                Converter={converters:BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                <TextBox Text="{Binding Connection.Length}"
                     Visibility="{Binding ElementName=subScopeConnectionItemControl, Path=ReadOnly,
                Converter={converters:BooleanToVisibilityConverter}, ConverterParameter=False}"/>
            </Grid>
            <Border Grid.Row="4" Grid.ColumnSpan="2"/>

            <Label Content="Conduit Length:" Grid.Row="5"/>
            <Grid Grid.Column="1" Grid.Row="5">
                <Label Content="{Binding Connection.ConduitLength}"
                       Visibility="{Binding ElementName=subScopeConnectionItemControl, Path=ReadOnly,
                    Converter={converters:BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                <TextBox Text="{Binding Connection.ConduitLength}"
                         Visibility="{Binding ElementName=subScopeConnectionItemControl, Path=ReadOnly,
                    Converter={converters:BooleanToVisibilityConverter}, ConverterParameter=False}"/>
            </Grid>
            <Border Grid.Row="5" Grid.ColumnSpan="2"/>

            <Label Content="Conduit Type:" Grid.Row="3" Grid.Column="2"/>
            <Grid Grid.Row="4" Grid.Column="2">
                <Label Content="{Binding Connection.ConduitType}"
                       Visibility="{Binding ElementName=subScopeConnectionItemControl, Path=ReadOnly,
                    Converter={converters:BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                <ListBox SelectedItem="{Binding Connection.ConduitType}" 
                         ItemsSource="{Binding ElementName=subScopeConnectionItemControl, Path=ConduitTypes}"
                         Visibility="{Binding ElementName=subScopeConnectionItemControl, Path=ReadOnly,
                    Converter={converters:BooleanToVisibilityConverter}, ConverterParameter=False}"/>
            </Grid>
            <Border Grid.Column="2" Grid.Row="3" Grid.RowSpan="3"/>

            <Grid Grid.Column="2" Grid.Row="5">
                <Button Content="Update"
                        Command="{Binding ElementName=subScopeConnectionItemControl, Path=UpdateCommand}"
                        CommandParameter="{Binding}"
                        Visibility="{Binding ElementName=subScopeConnectionItemControl, Path=ReadOnly,
                    Converter={converters:BooleanToVisibilityConverter}, ConverterParameter=False}"
                        Margin="5"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>

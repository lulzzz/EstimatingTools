<UserControl x:Class="TECUserControlLibrary.UserControls.ItemControls.NetworkConnectionItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.UserControls.ItemControls"
             mc:Ignorable="d" 
             x:Name="networkConnectionItemControl"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border BorderThickness="1" BorderBrush="{StaticResource ItemBorderBrush}" Background="{StaticResource ItemBackgroundBrush}" CornerRadius="5">
        <Grid DataContext="{Binding ElementName=networkConnectionItemControl, Path=NetworkConnection}">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="30"/>
                <RowDefinition MinHeight="30"/>
                <RowDefinition MinHeight="30"/>
                <RowDefinition MinHeight="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="# Connected:" HorizontalAlignment="Right"/>
            <TextBlock Text="{Binding Connection.Children.Count}"
                       Grid.Column="1"/>

            <TextBlock Text="Wire Length:" HorizontalAlignment="Right"
                       Grid.Row="1"/>
            <TextBox Text="{Binding Connection.Length}" Margin="5"
                     Grid.Row="1" Grid.Column="1"/>

            <TextBlock Text="Conduit Type:" HorizontalAlignment="Right"
                       Grid.Row="2"/>
            <ComboBox ItemsSource="{Binding ConduitTypes}" SelectedItem="{Binding SelectedConduitType}"
                      DisplayMemberPath="Name" Margin="5"
                      Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Conduit Length:" HorizontalAlignment="Right"
                       Grid.Row="3"/>
            <TextBox Text="{Binding Connection.ConduitLength}" Margin="5"
                     Grid.Row="3" Grid.Column="1"/>
        </Grid>
    </Border>
</UserControl>

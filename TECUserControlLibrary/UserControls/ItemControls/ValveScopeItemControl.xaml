<UserControl x:Class="TECUserControlLibrary.UserControls.ItemControls.ValveScopeItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.UserControls.ItemControls"
             x:Name="valveScopeItemControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding ElementName=valveScopeItemControl, Path=Valve}">
        <Border BorderThickness="1" BorderBrush="{StaticResource ItemBorderBrush}" CornerRadius="4" Background="{StaticResource ItemBackgroundBrush}">
            <StackPanel>
                <TextBlock Text="{Binding Equipment.Name, StringFormat=Equipment: {0}}"/>
                <TextBlock Text="{Binding SubScope.Name, StringFormat=Point: {0}}"/>
                <TextBlock Text="{Binding Valve.Name, StringFormat=Valve: {0}}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="TECUserControlLibrary.UserControls.ItemControls.ValveScopeItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.UserControls.ItemControls"
             x:Name="valveScopeItemControl"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="200">
    <Grid DataContext="{Binding ElementName=valveScopeItemControl, Path=Valve}">
        <Border Style="{StaticResource ScopeItemBorder}">
            <StackPanel>
                <TextBlock Text="{Binding Equipment.Name}"/>
                <TextBlock Text="{Binding SubScope.Name}"/>
                <TextBlock Text="{Binding Valve.Name}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

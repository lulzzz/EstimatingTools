<UserControl x:Class="TECUserControlLibrary.Views.ReviewTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:views="clr-namespace:TECUserControlLibrary.Views"
             
             mc:Ignorable="d"
             x:Name="parent"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid DataContext="{Binding ElementName=parent, Path=ViewModel}"
          Background="{DynamicResource SectionBackgroundBrush}">
        <TabControl>
            <TabItem Header="TEC Materials">
                <views:TECMaterialSummaryView ViewModel="{Binding TECMaterialVM}"/>
            </TabItem>
            <TabItem Header="Electrical Materials">
                <views:ElectricalMaterialSummaryView ViewModel="{Binding ElectricalMaterialVM}"/>
            </TabItem>
            <TabItem Header="Summary">
                <views:ReviewView ViewModel="{Binding ReviewVM}"/>
            </TabItem>
        </TabControl>
            
    </Grid>
</UserControl>

<UserControl x:Class="TECUserControlLibrary.UserControls.PropertyControls.ValvePropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.UserControls.PropertyControls"
             x:Name="valvePropertiesControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid DataContext="{Binding ElementName=valvePropertiesControl, Path=Selected}">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Actuator.Name, StringFormat=Actuator: {0}}" TextTrimming="CharacterEllipsis" Grid.Row="0"/>
        <TextBlock Text="{Binding Cv, StringFormat=Cv: {0}}" Grid.Row="1"/>
        <TextBlock Text="{Binding Size, StringFormat=Size: {0} inches}" Grid.Row="2"/>
        <TextBlock Text="{Binding Style, StringFormat=Style: {0}}" Grid.Row="3"/>
    </Grid>
</UserControl>

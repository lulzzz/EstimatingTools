<UserControl x:Class="TECUserControlLibrary.UserControls.PropertyControls.ConnectionPropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary.UserControls.PropertyControls"
             xmlns:listControls="clr-namespace:TECUserControlLibrary.UserControls.ListControls"
             x:Name="connectionPropertiesControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding ElementName=connectionPropertiesControl, Path=Selected}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Length, StringFormat=Distance: {0} (ft)}"/>
            <TextBlock Text="{Binding ConduitType.Name, StringFormat=Conduit Type: {0}}" Grid.Row="1"/>
            <TextBlock Text="{Binding ConduitLength, StringFormat=Conduit Length: {0} (ft)}" Grid.Row="2"/>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Plenum:"/>
                <CheckBox IsChecked="{Binding IsPlenum}" IsEnabled="False" Grid.Column="1"
                          VerticalAlignment="Center"/>
            </Grid>
            <Expander Header="IO" Grid.Row="4">
                <listControls:IOListControl Source="{Binding IOList}"
                                            Height="100"/>
            </Expander>
            <Expander Header="Connection Types" Grid.Row="5">
                <listControls:ElectricalMaterialListControl Source="{Binding ConnectionTypes}"
                                                            Height="100"/>
            </Expander>
        </Grid>
    </Grid>
</UserControl>

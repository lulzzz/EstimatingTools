<UserControl x:Class="TECUserControlLibrary.UserControls.ScopeGroupControl"
             x:Name="scopeGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utilities="clr-namespace:TECUserControlLibrary.Utilities"
             xmlns:local="clr-namespace:TECUserControlLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListView ItemsSource="{Binding ElementName=scopeGroupControl, Path=ItemsSource}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Expander Header="{Binding Name}" Visibility="{Binding ChildrenGroups.Count, Converter={utilities:CountVisibilityConverter}}">
                        <local:ScopeGroupControl ItemsSource="{Binding ChildrenGroups}"/>
                    </Expander>
                    <TextBlock Text="{Binding Name}" Visibility="{Binding ChildrenGroups.Count, Converter={utilities:ZeroCountToVisibileConverter}}"/>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>

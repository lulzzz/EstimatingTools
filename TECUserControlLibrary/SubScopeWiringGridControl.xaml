<UserControl x:Class="TECUserControlLibrary.SubScopeWiringGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cnvt="clr-namespace:TECUserControlLibrary.HelperConverters"
             xmlns:local="clr-namespace:TECUserControlLibrary"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="parent"
             xmlns:dd="urn:gong-wpf-dragdrop">
    <UserControl.Resources>
        <ResourceDictionary>
            <local:BindingProxy x:Key="proxy" Data="{Binding ElementName=parent, Path=ViewModel}"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding ElementName=parent}">
        <DataGrid ItemsSource="{Binding Path=SubScopeSource}"
                  SelectedItem="{Binding Path=ViewModel.SelectedSubScope, Converter={cnvt:IgnoreNewItemPlaceholderToNullConverter}}"
                  AutoGenerateColumns="False"
                  dd:DragDrop.DropHandler="{Binding Path=ViewModel}"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                
                <DataGridTextColumn Binding="{Binding Name, UpdateSourceTrigger=LostFocus}" Header="Name" Width="Auto"
                                    Visibility="{Binding Data.DataGridVisibilty.SubScopeName, 
                                    Source={StaticResource proxy}}"/>
                <DataGridTextColumn Binding="{Binding Description, UpdateSourceTrigger=LostFocus}" Header="Description" Width="Auto"
                                    Visibility="{Binding Data.DataGridVisibilty.SubScopeDescription, 
                                    Source={StaticResource proxy}}"/>
                
                <DataGridTextColumn Binding="{Binding Quantity, UpdateSourceTrigger=LostFocus}" Header="Quantity" Width="Auto"
                                    Visibility="{Binding Data.DataGridVisibilty.SubScopeQuantity, 
                                    Source={StaticResource proxy}}"/>
                <DataGridTextColumn Binding="{Binding Length, UpdateSourceTrigger=PropertyChanged}" Header="Length" Width="Auto"/>

            </DataGrid.Columns>
           
        </DataGrid>
    </Grid>
</UserControl>

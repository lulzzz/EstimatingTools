<UserControl x:Class="TECUserControlLibrary.ScopeCollectionsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TECUserControlLibrary"
             xmlns:grids="clr-namespace:TECUserControlLibrary.DataGrids"
             xmlns:eLib="clr-namespace:EstimatingLibrary;assembly=EstimatingLibrary"
             mc:Ignorable="d" 
             xmlns:cnvt="clr-namespace:TECUserControlLibrary.HelperConverters"
             x:Name="parent"
             d:DesignHeight="720 " d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="TECResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding ElementName=parent}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Path=ViewModel.SearchString}"
                     Height="24"
                     VerticalContentAlignment="Center"
                     Margin="2"/>
            <Button Grid.Column="1"
                    Content="Search"
                    Margin="2"
                    Command="{Binding Path=ViewModel.SearchCollectionCommand}"/>
            <Button Grid.Column="2"
                    Content="Done"
                    Margin="2"
                    Command="{Binding Path=ViewModel.EndSearchCommand}"/>
        </Grid>
        <TabControl Grid.Row="1"
                    Background="{DynamicResource SectionBackgroundBrush}"
                    SelectedIndex="{Binding Path=ViewModel.TabIndex}">
            <TabItem Header="Sys"
                Visibility="{Binding Path=ViewModel.SystemsVisibility}">
                <local:ScopeItemsControl ScopeSource="{Binding Path=ViewModel.SystemItemsCollection}"/>
            </TabItem>
            <TabItem Header="Equip"
                 Visibility="{Binding Path=ViewModel.EquipmentVisibility}">
                <local:ScopeItemsControl ScopeSource="{Binding Path=ViewModel.EquipmentItemsCollection}"/>
            </TabItem>
            <TabItem Header="Points"
                 Visibility="{Binding Path=ViewModel.SubScopeVisibility}">
                <local:ScopeItemsControl ScopeSource="{Binding Path=ViewModel.SubScopeItemsCollection}"/>
            </TabItem>
            <TabItem Header="Devices"
                     Visibility="{Binding Path=ViewModel.DevicesVisibility}">
                <local:ScopeItemsControl ScopeSource="{Binding Path=ViewModel.DevicesItemsCollection}"/>
            </TabItem>
            <TabItem Header="Tags"
                     Visibility="{Binding Path=ViewModel.TagsVisibility}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Name:"/>
                    <TextBox Text="{Binding Path=ViewModel.TagName}"
                             Grid.Column="1"
                             VerticalAlignment="Top"
                             Margin="5"/>
                    <Button Content="Add"
                            Grid.ColumnSpan="2" 
                            Grid.Row="1"
                            Command="{Binding Path=ViewModel.AddTagCommand}"
                                Margin="5"/>
                    <grids:TagsGridControl TagsSource="{Binding Path=ViewModel.Templates.Tags}"
                                           Grid.Row="2" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Manufacturers"
                    Visibility="{Binding Path=ViewModel.ManufacturerVisibility}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Manufacturer:"/>
                    <TextBox Text="{Binding Path=ViewModel.ManufacturerName}"
                            Grid.Column="1"
                            VerticalAlignment="Top"
                            Margin="5"/>
                    <Label Content="Multiplier:"
                        Grid.Row="1"/>
                    <TextBox Text="{Binding Path=ViewModel.ManufacturerMultiplier}"
                            Grid.Column="1"
                            Grid.Row="1"
                            VerticalAlignment="Top"
                            Margin="5"/>
                    <Button Content="Add"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                            Margin="5"
                        Command="{Binding Path=ViewModel.AddManufacturerCommand}"/>

                    <grids:ManufacturersGridControl ManufacturersSource="{Binding Path=ViewModel.Templates.ManufacturerCatalog}"
                                        Grid.Row="3" Grid.ColumnSpan="2"/>

                </Grid>
            </TabItem>
            <TabItem Header="Add Devices"
                    Visibility="{Binding Path=ViewModel.DevicesEditVisibility}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="46*"/>
                        <ColumnDefinition Width="35*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0"
                        Grid.Row="0"
                        Content="Name:"/>
                    <TextBox Grid.Column="1" Grid.Row="0"
                            Text="{Binding Path=ViewModel.DeviceName}"
                            VerticalAlignment="Top"
                            Margin="5,5,5,0" Grid.ColumnSpan="2"/>
                    <Label Grid.Column="0"
                        Grid.Row="1"
                        Content="Description:"/>
                    <TextBox Grid.Column="1"
                            Grid.Row="1"
                            Text="{Binding Path=ViewModel.DeviceDescription}"
                            VerticalAlignment="Top"
                            Margin="5,5,5,0" Grid.ColumnSpan="2"/>
                    <Label Grid.Column="0"
                        Grid.Row="2"
                        Content="Cost:"/>
                    <TextBox Grid.Column="1"
                            Grid.Row="2"
                            Text="{Binding Path=ViewModel.DeviceCost}"
                            VerticalAlignment="Top"
                            Margin="5,5,5,0" Grid.ColumnSpan="2"/>
                    <Label Grid.Column="0"
                        Grid.Row="3"
                        Content="Wire Type:"/>
                    <ComboBox Grid.Column="1"
                            Grid.Row="3"
                              ItemsSource="{Binding Path=ViewModel.Templates.ConnectionTypeCatalog}"
                              DisplayMemberPath="Name"
                              SelectedValue="{Binding ElementName=parent, Path=ViewModel.DeviceConnectionType}"
                            VerticalAlignment="Top"
                            Margin="5,5,5,0" Grid.ColumnSpan="2"/>
                    <Label Grid.Column="0"
                        Grid.Row="4"
                        Content="Manufacturer:"/>
                    <ComboBox ItemsSource="{Binding Path=ViewModel.Templates.ManufacturerCatalog}"
                            DisplayMemberPath="Name"
                            SelectedItem="{Binding Path=ViewModel.DeviceManufacturer}"
                            Grid.Row="4" Grid.Column="1"
                            VerticalAlignment="Top"
                            Margin="5,5,5,0"/>
                    <ComboBox Grid.Row="5" Margin="5" ItemsSource="{Binding Path=ViewModel.Templates.Tags}"
                              SelectedItem="{Binding Path=ViewModel.SelectedTag}"
                              DisplayMemberPath="Text"/>
                    <Button Grid.Row="5" Grid.Column="1" Content="Add Tag"
                            Command="{Binding Path=ViewModel.AddTagToDeviceCommand}"
                            Margin="5"/>
                    <grids:TagsGridControl Grid.ColumnSpan="2" Grid.Row="6"
                                           TagsSource="{Binding Path=ViewModel.DeviceTags}"/>
                    <Button Grid.Column="0"
                        Grid.Row="7"
                        Grid.ColumnSpan="3"
                        Margin="2"
                        Content="Add"
                        Command="{Binding Path=ViewModel.AddDeviceCommand}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Add Controllers"
                     Visibility="{Binding Path=ViewModel.ControllerEditVisibility}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Name"
                           Grid.Row="0"/>
                    <TextBox Text="{Binding Path=ViewModel.ControllerName}"
                             Grid.Column="1"
                             Grid.Row="0"
                             Margin="5"/>
                    <Label Content="Description"
                           Grid.Row="1"/>
                    <TextBox Text="{Binding Path=ViewModel.ControllerDescription}"
                             Grid.Column="1"
                             Grid.Row="1"
                             Margin="5"/>
                    <Label Content="Cost"
                           Grid.Row="2"/>
                    <TextBox Text="{Binding Path=ViewModel.ControllerCost}"
                             Grid.Column="1"
                             Grid.Row="2"
                             Margin="5"/>
                    <Label Grid.Column="0"
                           Grid.Row="3"
                           Content="Manufacturer:"/>
                    <ComboBox ItemsSource="{Binding Path=ViewModel.Templates.ManufacturerCatalog}"
                              DisplayMemberPath="Name"
                          Grid.Row="3" Grid.Column="1" Margin="5"
                         SelectedItem="{Binding Path=ViewModel.ControllerManufacturer, Converter={cnvt:ManufacturerConverter}}"/>
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="IO"/>
                        <TextBox Grid.Column="1" Text="{Binding Path=ViewModel.ControllerIOQTY}"
                                 Margin="5"/>
                    </Grid>

                    
                    <Grid Grid.Column="1"
                          Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox ItemsSource="{Binding Source={local:EnumBindingSource {x:Type eLib:IOType}}}"
                                  SelectedValue="{Binding Path=ViewModel.ControllerIOType}"
                                  Margin="5"/>
                        <Button Content="Add IO"
                                Command="{Binding Path=ViewModel.AddIOToControllerCommand}"
                                Grid.Column="1"
                                Margin="5"/>
                    </Grid>
                    <DataGrid ItemsSource="{Binding Path=ViewModel.ControllerIO}"
                              Grid.Row="5"
                              Grid.ColumnSpan="2"
                              CanUserAddRows="False"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Type}" Header="Type"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Binding="{Binding Quantity}" Header="Quantity"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ComboBox Grid.Row="6" Margin="5" ItemsSource="{Binding Path=ViewModel.Templates.Tags}"
                              SelectedItem="{Binding Path=ViewModel.SelectedTag}"
                              DisplayMemberPath="Text"/>
                    <Button Grid.Row="6" Grid.Column="1" Content="Add Tag"
                            Command="{Binding Path=ViewModel.AddTagToControllerCommand}"
                            Margin="5"/>
                    <grids:TagsGridControl Grid.ColumnSpan="2" Grid.Row="7"
                                           TagsSource="{Binding Path=ViewModel.ControllerTags}"/>
                    <Button Content="Add Controller"
                            Command="{Binding Path=ViewModel.AddControllerCommand}"
                            Grid.Row="8"
                            Grid.ColumnSpan="2"
                            Margin="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Controllers"
                     Visibility="{Binding Path=ViewModel.ControllerVisibility}">
                <local:ScopeItemsControl ScopeSource="{Binding Path=ViewModel.ControllersItemsCollection}"/>
            </TabItem>
            <TabItem Header="Asociated Costs"
                     Visibility="{Binding Path=ViewModel.AssociatedCostsVisibility}">
                <local:ScopeItemsControl ScopeSource="{Binding Path=ViewModel.AssociatedCostsItemsCollection}"/>
            </TabItem>
            <TabItem Visibility="Collapsed">
                <TextBlock Text="Choose another tab to display relevant templates."
                         TextWrapping="Wrap" Foreground="Black"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </TabItem>
            <TabItem Header="Controlled Scope"
                     Visibility="{Binding Path=ViewModel.ControlledScopeVisibility}">
                <local:ScopeItemsControl ScopeSource="{Binding Path=ViewModel.ControlledScopeItemsCollection}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
